#!/usr/bin/env bash

set -e
[ -n "$DEBUG" ] && set -x

root="$(echo "${1:-"$HOME/Downloads"}" | sed -e 's/\\//g')"

while read subpath; do
  name="$(basename "$subpath" .srt)"
  dir="$(find "$root" -name "${name}*" | grep -v ".srt$" | xargs -I@ dirname @)"
  mv "$subpath" "$dir"
  echo "${dir}/${name}.srt"
done
