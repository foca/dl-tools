#!/usr/bin/env bash

set -e
[ -n "$DEBUG" ] && set -x

directory="$(echo "${1:-"$HOME/Downloads"}" | sed -e 's/\\//g')"

while read url name; do
  default_name="$(basename "$url" | cut -d? -f1)"
  name="${name:-$default_name}"
  name="${name%.gz}"
  curl "$url" 2>/dev/null | gunzip > "$directory/$name"
  echo "$directory/$name"
done
