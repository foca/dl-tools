#!/usr/bin/env bash

set -e
[ -n "$DEBUG" ] && set -x

directory="$(echo "${1:-"$HOME/Downloads"}" | sed -e 's/\\//g')"

while read url name; do
  default_name="$(basename "$url" | cut -d? -f1)"
  name="${name:-$default_name}"
  name="${name%.gz}"

  if [[ "$name" = /* ]]; then
    path="$name";
  else
    path="$directory/$name";
  fi

  curl "$url" 2>/dev/null | gunzip > "$path"
  echo "$directory/$name"
done
